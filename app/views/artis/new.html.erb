<h1>Create new article</h1>

<% if @artis.errors.any? %>
    <h2>Error Occured</h2>
        <% @artis.errors.full_messages.each do |msg| %>
          <li>  <%= msg %></li>
        <% end %>
<% end %>

<%= form_with scope: :arti, url:artis_path, local: true do  |f| %>

    <p> 
        <%= f.label :title %><br/>
         <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %><br/>
        <%= f.text_area :description %>

    </p>

    <p>
        <%= f.submit%>
    </p>
    <% end%>

    <%= link_to 'Return to artis listying', artis_path %>